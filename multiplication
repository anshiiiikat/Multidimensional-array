

#include <iostream>
using namespace std;

int main() {
    int rows1, cols1, rows2, cols2;

  
    cout << "Enter number of rows for Matrix 1: ";
    cin >> rows1;
    cout << "Enter number of columns for Matrix 1: ";
    cin >> cols1;

    
    cout << "Enter number of rows for Matrix 2: ";
    cin >> rows2;
    cout << "Enter number of columns for Matrix 2: ";
    cin >> cols2;


    if (rows1 != rows2 || cols1 != cols2) {
        cout << "\nMatrix addition not possible. Dimensions do not match." << endl;
        return 0;
    }
    int matrix1[100][100], matrix2[100][100], sum[100][100];

   
    cout << "\nEnter elements of Matrix 1:\n";
    for (int i = 0; i < rows1; i++) {
        for (int j = 0; j < cols1; j++) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matrix1[i][j];
        }
    }


    cout << "\nEnter elements of Matrix 2:\n";
    for (int i = 0; i < rows2; i++) {
        for (int j = 0; j < cols2; j++) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matrix2[i][j];
        }
    }
    

     cout<<"Multiplication:\n";
     for (int i = 0; i < rows1; i++) {
        for (int j = 0; j < cols1; j++) {
            sum[i][j] = matrix1[i][j]*matrix2[i][j];
            cout<<sum[i][j]<<"\t";
        }
        cout<<endl;
        
    }
}

\\output
